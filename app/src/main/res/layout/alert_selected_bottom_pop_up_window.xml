<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border"
    android:padding="20dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closePopupWindowIV"
        android:src="@drawable/ic_close_gray_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/image_view_desc"
        />

    <TextView
        android:id="@+id/itemSelectedTV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/closePopupWindowIV"
        app:layout_constraintBottom_toBottomOf="@+id/closePopupWindowIV"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/closePopupWindowIV"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ackIconIV"
        android:src="@drawable/ic_check_black_24dp"
        app:layout_constraintTop_toTopOf="@id/closePopupWindowIV"
        app:layout_constraintBottom_toBottomOf="@+id/closePopupWindowIV"
        app:layout_constraintRight_toLeftOf="@id/addNoteIconIV"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/image_view_desc"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addNoteIconIV"
        android:src="@drawable/ic_content_paste_gray_24dp"
        app:layout_constraintTop_toTopOf="@id/closePopupWindowIV"
        app:layout_constraintBottom_toBottomOf="@+id/closePopupWindowIV"
        app:layout_constraintRight_toLeftOf="@id/statIconIV"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/image_view_desc"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statIconIV"
        android:src="@drawable/ic_assessment_gray_24dp"
        app:layout_constraintTop_toTopOf="@id/closePopupWindowIV"
        app:layout_constraintBottom_toBottomOf="@+id/closePopupWindowIV"
        app:layout_constraintRight_toLeftOf="@id/threeDotsIconIV"
        android:layout_marginEnd="8dp"
        />

    <ImageView
        android:id="@+id/threeDotsIconIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_black_24dp"
        app:layout_constraintTop_toTopOf="@id/closePopupWindowIV"
        app:layout_constraintBottom_toBottomOf="@+id/closePopupWindowIV"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/image_view_desc"
        />

</android.support.constraint.ConstraintLayout>